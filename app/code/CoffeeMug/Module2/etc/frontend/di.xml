    <preference for="Magento\Catalog\Controller\Product\View" type="CoffeeMug\Module2\Controller\Product\View" />
    <type name="Magento\Catalog\Controller\Product\View">
        <plugin name="custom_catalog_product_view" type="CoffeeMug\Module2\Plugin\Catalog\Product\View" sortOrder="10" />
    </type>
</config>
