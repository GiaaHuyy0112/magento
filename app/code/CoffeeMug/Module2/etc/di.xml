<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Catalog\Model\Product">
        <plugin name="coffeemug_module2_myplugin"
            type="CoffeeMug\Module2\Plugin\MyPlugin"
            sortOrder="1" />
    </type>
    <type name="Magento\Theme\Block\Html\Footer">
        <plugin name="coffeemug_module2_modifycopyright" type="CoffeeMug\Module2\Plugin\ModifyCopyright" sortOrder="1"/>
    </type>
    <type name="Magento\Theme\Block\Html\Breadcrumbs">
        <plugin name="coffeemug_module2_modifybreadcrumbs" type="CoffeeMug\Module2\Plugin\ModifyBreadcrumbs" sortOrder="1"/>
    </type>
    <type name="Magento\Framework\App\Router\NoRouteHandlerList">
        <arguments>
            <argument name="handlerClassesList" xsi:type="array">
                <item name="custom" xsi:type="array">
                    <item name="class" xsi:type="string">CoffeeMug\Module2\App\Router\NoRouteHandler</item>
                    <item name="sortOrder" xsi:type="string">50</item>
                </item>
            </argument>
        </arguments>
    </type>
</config>
