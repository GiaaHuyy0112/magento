<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
      <referenceContainer name="footer">
        <container name="custom-component-wrapper" label="Component" htmlTag="div" htmlId="custom-component-wrapper" htmlClass="custom-component-wrapper">
          <block name="custom-component" template="Magento_Theme::div.phtml" >
            <arguments>
              <argument name="jsLayout" xsi:type="array">
                <item name="components" xsi:type="array">
                  <item name="mycomponent" xsi:type="array">
                    <item name="component" xsi:type="string">
                      js/component
                    </item>

                    <item name="config" xsi:type="array">
                      <item name="template" xsi:type="string">
                        Magento_Theme/ko
                      </item>
                      <item name="content" xsi:type="string">
                        This is a content
                      </item>
                      <item name="update" xsi:type="string">
                        This is a update content
                      </item>
                      <item name="waiting" xsi:type="string">
                        This is a waiting content
                      </item>
                      <item name="provider" xsi:type="string">mycomponent.childComponent</item>
                    </item>

                    <item name="children" xsi:type="array">
                        <item name="childComponent" xsi:type="array">
                            <item name="component" xsi:type="string">js/2ndcomponent</item>
                            <item name="config" xsi:type="array">
                                <item name="provider" xsi:type="string">mycomponent</item>
                            </item>
                        </item>
                    </item>
                  </item>
                </item>
              </argument>
            </arguments>
          </block>
          <container name="component-wrapper" label="ComponentWrapper" htmlTag="div" htmlId="componentWrapper" htmlClass="row">
            <!-- Component 1 -->
            <block name="component-1" template="Magento_Theme::component1.phtml">
              <arguments>
                <argument name="jsLayout" xsi:type="array">
                  <item name="components" xsi:type="array">
                    <item name="component1" xsi:type="array">
                      <item name="component" xsi:type="string">js/component1</item>
                      <item name="config" xsi:type="array">
                        <item name="template" xsi:type="string">Magento_Theme/component1</item>
                        <item name="provider" xsi:type="string">component2</item>
                      </item>
                    </item>
                  </item>
                </argument>
              </arguments>
            </block>
            <!-- /Component 1 -->
            <!-- Component 2 -->
            <block name="component-2" template="Magento_Theme::component2.phtml">
              <arguments>
                <argument name="jsLayout" xsi:type="array">
                  <item name="components" xsi:type="array">
                    <item name="component2" xsi:type="array">
                      <item name="component" xsi:type="string">js/component2</item>
                      <item name="config" xsi:type="array">
                        <item name="template" xsi:type="string">Magento_Theme/component2</item>
                        <item name="provider" xsi:type="string">component1</item>
                      </item>
                    </item>
                  </item>
                </argument>
              </arguments>
            </block>
            <!-- /Component 2 -->
          </container>
          
        </container>
        <container name="widget" label="Wiget" htmlTag="div" htmlId="custom-widget-wrapper" htmlClass="custom-widget-wrapper">
          <block name="custom-widget" template="Magento_Theme::html/widget.phtml" />
        </container>
        <container name="custom-container" label="Page Footer Custom" htmlTag="div" htmlClass="footer custom">
            <block class="Magento\Theme\Block\Html\Footer" name="custom-copyright" template="Magento_Theme::html/copyright-custom.phtml">
              <block name="custom-block-name" template="Magento_Theme::html/name-custom.phtml">
                <arguments>
                  <argument name="argument1" xsi:type="string">Hello Boyy</argument>
                  <argument name="argument2" xsi:type="string">Escape String</argument>
                  <argument name="jsLayout" xsi:type="array">
                    <item name="config-1" xsi:type="string">Hello</item>
                    <item name="config-2" xsi:type="string">Hi</item>
                  </argument>
                </arguments>
              </block>
            </block>
        </container>
      </referenceContainer>
    </body>
</page>
