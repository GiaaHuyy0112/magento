<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="main.content" htmlTag="main" htmlClass="page-main-full-width" />
        <referenceContainer name="content" htmlTag="main" htmlClass="page-main" />
        <referenceBlock name="breadcrumbs" remove="true"/>
        <move element="category.view.container" destination="page.main.title" />
        <referenceBlock name="main.content">
                <block name="category.description" template="Magento_Catalog::descriptions.phtml" after="-"/>
        </referenceBlock>
    </body>
</page>
